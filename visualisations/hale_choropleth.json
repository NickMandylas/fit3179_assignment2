{
  "config": {
    "legend": {
      "orient": "bottom"
    },
    "view": {
      "stroke": "transparent"
    }
  },
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Healthy life expectancy (HALE) by Country",
    "color": "#092215",
    "fontSize": 18.5
  },
  "width": "container",
  "height": 500,
  "background": "#fff",
  "data": {
    "url": "../utils/world.json",
    "format": { "type": "topojson", "feature": "global.geo" }
  },
  "projection": { "type": "equalEarth" },
  "layer": [
    {
      "transform": [
        {
          "calculate": "'‚ùå Not data was available for ' + datum.properties.name + '.'",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "darkgray",
        "stroke": "black",
        "strokeWidth": 1
      },
      "encoding": { "tooltip": { "field": "note" } }
    },
    {
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "../transformed_data/hale_expectancy_both_sex_country.csv"
            },
            "key": "Location",
            "fields": ["First Tooltip"]
          }
        }
      ],
      "mark": { "type": "geoshape", "stroke": "black", "strokeWidth": 0.2 },
      "encoding": {
        "color": {
          "field": "First Tooltip",
          "title": "Percent per Country",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [50, 55, 60, 65, 70, 75, 80]
          }
        },
        "tooltip": [
          { "field": "properties.name", "type": "nominal", "title": "Country" },
          {
            "field": "First Tooltip",
            "type": "quantitative",
            "title": "HALE"
          }
        ]
      }
    }
  ]
}
